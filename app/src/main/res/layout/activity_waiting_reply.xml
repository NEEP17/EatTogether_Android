<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cst_wait"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.WaitingReplyActivity"
    android:orientation="vertical"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/text1"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:src="@drawable/home_logo"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/img_rotate"
        android:layout_width="122dp"
        android:layout_height="0dp"
        android:layout_marginTop="107dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/loading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/text_black"
        android:lineSpacingExtra="3sp"
        android:fontFamily="@font/nanumsquareb"
        android:text="결과 분석 중"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/img_rotate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/text_black"
        android:lineSpacingExtra="3sp"
        android:fontFamily="@font/nanumsquarel"
        android:text="잠시만 기다려주세요."
        android:layout_marginTop="77dp"
        app:layout_constraintTop_toBottomOf="@+id/img_rotate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="137dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_rotate">
        <TextView
            android:id="@+id/enterNumReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareb"
            android:lineSpacingExtra="3sp"
            android:text="0"
            android:textColor="@color/text_black"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/fullNumReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareb"
            android:lineSpacingExtra="3sp"
            android:text=" / N"
            android:textColor="@color/text_black"
            android:textSize="20sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>