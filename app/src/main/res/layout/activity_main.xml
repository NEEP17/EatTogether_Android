<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_gray">

    <View
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:background="@color/main_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/img_main_logo"
       android:layout_width="154dp"
       android:layout_height="30dp"
       android:layout_marginTop="64dp"
       android:layout_marginStart="24dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:src="@drawable/home_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/text_black"
        android:layout_marginTop="23dp"
        android:lineSpacingExtra="10sp"
        android:fontFamily="@font/nanumsquareb"
        android:text="오늘 뭐 먹을 지 고민된다면,\n지금 당장 추천받자!"
        app:layout_constraintStart_toStartOf="@+id/img_main_logo"
        app:layout_constraintTop_toBottomOf="@id/img_main_logo"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_make"
        android:layout_width="0dp"
        android:layout_height="164dp"
        android:elevation="3dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="223dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nanumsquareb"
            app:layout_constraintStart_toStartOf="@id/v_make"
            app:layout_constraintBottom_toTopOf="@id/v_make"
            tools:text="방 만들기"/>

        <View
            android:id="@+id/v_make"
            android:layout_width="228dp"
            android:layout_height="1dp"
            android:layout_marginTop="67dp"
            android:layout_marginStart="22dp"
            android:background="@color/text_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/text_black"
            android:fontFamily="@font/nanumsquarel"
            android:lineSpacingExtra="5sp"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@id/v_make"
            app:layout_constraintStart_toStartOf="@id/v_make"
            tools:text="친구들과 함께\n결정하기 위해 방 만들기" />

        <ImageView
            android:layout_width="92dp"
            android:layout_height="104dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/home_icon_makeroom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_join"
        android:layout_width="0dp"
        android:layout_height="164dp"
        android:elevation="3dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_make"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/text_black"
            android:fontFamily="@font/nanumsquarel"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/v_join"
            app:layout_constraintBottom_toTopOf="@id/v_join"
            tools:text="참여하기"/>

        <View
            android:id="@+id/v_join"
            android:layout_width="228dp"
            android:layout_height="1dp"
            android:layout_marginTop="67dp"
            android:layout_marginStart="22dp"
            android:background="@color/text_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/text_black"
            android:lineSpacingExtra="5sp"
            android:fontFamily="@font/nanumsquareb"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@id/v_join"
            app:layout_constraintStart_toStartOf="@id/v_join"
            tools:text="코드 입력하고\n뭐 먹을지 추천 받자!" />

        <ImageView
            android:layout_width="92dp"
            android:layout_height="104dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/home_icon_join"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>